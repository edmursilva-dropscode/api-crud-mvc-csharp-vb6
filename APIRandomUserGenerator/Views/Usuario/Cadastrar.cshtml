@model UsuarioModel
@{
    if (Context.Request.RouteValues.ContainsKey("id"))
        ViewBag.Subtitulo = "Alteração do Usuário";
    else
        ViewBag.Subtitulo = "Cadastro do Usuário";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<form asp-action="Cadastrar" class="row">
    <input type="hidden" asp-for="@Model.IdUsuario">
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Nome">Nome:</label><br>
        <input asp-for="@Model.Nome" class="form-control" autofocus>
        <span asp-validation-for="@Model.Nome" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Sobrenome">Sobrenome:</label><br>
        <input asp-for="@Model.Sobrenome" class="form-control" autofocus>
        <span asp-validation-for="@Model.Sobrenome" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Senha">Senha:</label><br>
        <input asp-for="@Model.Senha" class="form-control" autofocus>
        <span asp-validation-for="@Model.Senha" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Email">Email:</label><br>
        <input asp-for="@Model.Email" class="form-control" autofocus>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Telefone">Telefone:</label><br>
        <input asp-for="@Model.Telefone" class="form-control" autofocus>
        <span asp-validation-for="@Model.Telefone" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Genero">Gênero:</label><br>
        <input asp-for="@Model.Genero" class="form-control" autofocus>
        <span asp-validation-for="@Model.Genero" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>
@*Tela de cadastro de usuario*@