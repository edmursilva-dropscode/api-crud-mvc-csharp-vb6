@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers              
@*Biblioteca TagHelper*@

@*Controlador que captura o menu ativo de acordo com a rota*@
@{
    var controllerAtual = ViewContext.RouteData.Values["controller"]?.ToString();
    var classeMenuPrincipal = controllerAtual == "Home" ? "active" : "";
    var classeMenuUsuarios = controllerAtual == "Usuario" ? "active" : "";
}

<!DOCTYPE html>
<html lang="pt-br">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css">
        <link rel="stylesheet" href="/css/stilos.css">
        <title>APIRandomUserGenerator :: @ViewBag.Subtitulo</title>
    </head>

    <body>
        @*Barra de navegação superior*@
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">APIRandomUserGenerator</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <div class="navbar-nav ms-auto">
                        <a class="nav-link @classeMenuPrincipal" asp-controller="Home" asp-action="Index">Principal</a>
                        <a class="nav-link @classeMenuUsuarios" asp-controller="Usuario" asp-action="Index">Usuarios</a>
                    </div>
                </div>
            </div>
        </nav>

        @*REgião responsável por conter o corpo da página*@
        <div class="container mt-2">
            @RenderBody()
        </div>

        @*Rodapé da pagina*@
        <div class="text-light bg-dark p-3 fixed-bottom text-center">
            APIRandomUserGenerator&copy; @DateTime.Now.Year.ToString()<br>
            Todos os direitos reservados
        </div>

        @*Lib JavaScript do BootStrap*@
        <script src="/lib/bootstrap5/dist/js/bootstrap.js"></script>

    </body>

</html>